            <option value="Screen C">The mutants</option>
            <option value="Screen D">Ford V Ferrari</option>
        </select><br><br>
        <label for="seats">No of Seats : </label>
        <input type="number" name="seats" id="seats" min="1" value="1" max="4">
    </div><br>
    <input type="submit" value="Book"><br><br>
</form>
    <form action="/logout" method="POST">
        <button>Sign Out</button>
    </form>
